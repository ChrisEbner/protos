.nav {
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-around;

    &_list {
        list-style: none;
        width: 100%;
        display: flex;
        flex-direction: row;
    }

    &_item {
        flex: 1 1 auto;
    }

    &_logo {
        position: absolute;
        top: 1em;
        left: 1em;
    }
}